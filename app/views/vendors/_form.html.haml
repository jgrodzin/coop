- if @errors
  .errors
    %p #{pluralize((@errors.count), "error")} prohibited this vendor from being saved
    %ul
    - @errors.each do |message|
      %li.error= message

.vendor-form
  = form_for(@vendor) do |f|
    .field
      = f.label "Vendor name*"
      = f.text_field :name
    .field
      = f.label "Contact name"
      = f.text_field :rep
    .field
      = f.label "Food category"
      = f.text_field :category
    .field.phone-input
      = f.label "Phone"
      = f.text_field :phone
    .field
      = f.label "Email"
      = f.text_field :email
    .field
      = f.label "Address"
      = f.text_field :address
    .field
      = f.label "Payment type"
      = f.text_field :payment
    .field
      = f.label "Notes"
      = f.text_area :notes
    .form-actions
      = f.submit "Save"
      .cancel-button
        = link_to "Cancel", vendors_path

    %br
    - if @vendor.persisted?
      %button.form-action-delete= link_to "DELETE vendor", vendor_path(@vendor), method: :delete, data: { confirm: "Are you sure you want to delete this vendor?" }
      %p Deleting this vendor will also delete all of this vendor's products, including those (if any) in current and past shops. Please be careful.
