.section-title
  %h3 Vendor Archives

- if current_member.admin?
  .add-link
    %h5= link_to "View Active Vendors", vendors_path

%table.table-minimal
  %thead
    %tr
      %th Name
      %th Rep
      %th Phone
      %th Email
      %th

  %tbody
    - @vendors.each do |vendor|
      %tr
      %td= vendor.name
      %td= vendor.rep
      %td= vendor.phone
      %td= vendor.email
      %td= link_to "more info", vendor_path(vendor)


