.two-column-form
  .field
    .first-name-input
      = f.label "First name*"
      = f.text_field :first_name
  .field
    .last-name-input
      = f.label "Last name*"
      = f.text_field :last_name

.two-column-form
  .field
    .email-input
      = f.label "Email*"
      = f.text_field :email
  .field
    .phone-input
      = f.label "Phone"
      = f.text_field :phone

.street-input
  = f.label "Street address"
  = f.text_field :street_address

.unit-input
  = f.label "Unit number"
  = f.text_field :unit_number

.city-input
  = f.label "City"
  = f.text_field :city

.state-input
  = f.label "State"
  = f.select(:state, Carmen::Country.named("United States").subregions.select { |s| s.type == "state" }.map { |state| [state.name, state.code] }, selected: "IL")

.zip-input
  = f.label "Zip"
  = f.text_field :zip

- if @current_member.admin?
  .admin-input
    = f.label "Admin User?"
    = f.check_box :admin

  %p Admin users can view all member pricesheet history, edit member info, manage teams, and manage events.

- if params[:status].present?
  = f.hidden_field :status, value: "substitute"
