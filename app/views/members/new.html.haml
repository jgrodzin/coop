
- if @errors
  .errors
    %p #{pluralize((@errors.count), "error")} prohibited member from being saved
    %ul
    - @errors.each do |message|
      %li.error= message

.create-new-member-form
  .form-header
    %h2 New Member
  %h5.required-fields Required fields *

  = form_for @member, url: create_member_path  do |f|
    %p
      = f.label "First name*"
      = f.text_field :first_name

    %p
      = f.label "Last name*"
      = f.text_field :last_name

    %p
      = f.label "Email*"
      = f.text_field :email

    %p
      = f.label "Street address"
      = f.text_field :street_address

    %p
      = f.label "Unit number"
      = f.text_field :unit_number

    %p
      = f.label "City"
      = f.text_field :city

    %p
      = f.label "State"
      = f.select(:state, Carmen::Country.named("United States").subregions.select { |s| s.type == "state" }.map { |state| [state.name, state.code] }, selected: "Illinois")

    %p
      = f.label "Zip"
      = f.text_field :zip

    %p
      Don't forget to add this member to a team on the teams page!

    %br
    .form-actions= f.submit "Save"

    = link_to "Cancel", :back
