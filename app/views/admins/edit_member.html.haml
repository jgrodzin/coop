.section-title
  %h3 Edit #{@member.name}

- if @errors
  .errors
    %p #{pluralize((@errors.count), "error")} prohibited member from being saved
    %ul
    - @errors.each do |message|
      %li.error= message

.member-form
  %h5.required-fields Required fields *

  = form_for(@member, url: admin_member_update_member_path(admin_id: current_member.id, member_id: @member.id)) do |f|
    = render partial: "members/form", locals: { f: f }

    .form-actions
      = f.submit "Save"
      .cancel-button
        = link_to "Cancel", member_path(@member.id)
