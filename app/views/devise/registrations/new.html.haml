.sign-up-form
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-field
      = f.email_field :email, autofocus: true, placeholder: "Email"
    .form-field
      = f.password_field :password, autocomplete: "off", placeholder: "Password (#{@minimum_password_length} characters minimum)"
    .form-field
      = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation"
    .form-actions= f.submit "Sign up"
  = render "devise/shared/links"
  