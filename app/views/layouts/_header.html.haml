.centered-navigation
  .centered-navigation-wrapper
    %a.mobile-logo{}
      = image_tag("coop-logo.jpg", :alt => "LP Coop Logo")
    %a.centered-navigation-menu-button{:href => ""} MENU
    %ul.centered-navigation-menu
      - if signed_in?
        %li.nav-link
          =link_to "HOME", root_path
        %li.nav-link
          =link_to "EVENTS", events_path
        - if current_member.active?
          %li.nav-link
            =link_to "TEAMS", teams_path
          %li.nav-link
            =link_to "MEMBERS", members_path
          %li.nav-link
            =link_to "VENDORS", vendors_path
        %li.nav-link.more.profile
          %a{:href => "javascript:void(0)"}= current_member.first_name.upcase
          %ul.submenu
            %li
              =link_to "My Profile", member_path(current_member.id)
            %li
              =link_to "Change password", edit_member_registration_path
            %li.nav-link.sign-out
              =link_to "Sign out", destroy_member_session_path, method: :delete, class: 'sign-out'

