!!!
%html
  %head
    %meta{ content: "width=device-width, initial-scale=1", name: "viewport" }
    = stylesheet_link_tag    'application', media: 'all'
    = csrf_meta_tags
    %title Coop
  %body
    = render "layouts/header"
    .container#notifications
      - if notice || alert
        .notifications
          - if notice
            .notice
              %p= notice
          - if alert
            .alert
              %p= alert
    %section#content
    .container
      = yield
    %footer#footer
      .container
        %p &copy; Lp Coop

    = javascript_include_tag "application"
    :javascript
      setTimeout(function() {
        $(".notifications").fadeOut();
      }, 2000);
