!!!
%html
  %head
    %meta{ content: "width=device-width, initial-scale=1", name: "viewport" }
    / %link{:href => "http://fonts.googleapis.com/css?family=Niconne", :rel => "stylesheet", :type => "text/css"}
    / %link{:href =>'http://fonts.googleapis.com/css?family=Hind|Josefin+Slab', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href =>'http://fonts.googleapis.com/css?family=Hind|PT+Mono|Old+Standard+TT', :rel => 'stylesheet', :type => 'text/css'}
    = stylesheet_link_tag    'application', media: 'all'
    = csrf_meta_tags
    = javascript_include_tag "application"
    %title Coop
  %body
    %section#header
      = render "layouts/header"
    / #notifications
    /   - if notice || alert
    /     .notifications
    /       - if notice
    /         .notice
    /           %p= notice
    /       - if alert
    /         .alert
    /           %p= alert

    %section#content
      .centered-container
        = yield

    %footer#footer
      .container


    :javascript
      setTimeout(function() {
        $(".notifications").fadeOut();
      }, 2000);
