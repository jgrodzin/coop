!!!
%html
  %head
    %meta{ content: "width=device-width, initial-scale=1", name: "viewport" }
    = stylesheet_link_tag    'application', media: 'all'
    = csrf_meta_tags
    %title Coop
  / %body
  /   .container
  /   %p.navbar-text.pull-right
  /     - if member_signed_in?
  /       Logged in as
  /       = succeed "." do
  /         %strong= current_member.email
  /       = link_to 'Edit profile', edit_member_registration_path, :class => 'navbar-link'
  /       |
  /       \#{link_to "Logout", destroy_member_session_path, method: :delete, :class => 'navbar-link'}
  /     - else
  /       = link_to "Sign up", new_member_registration_path, :class => 'navbar-link'
  /       |
  /       \#{link_to "Login", new_member_session_path, :class => 'navbar-link'}
  /     - if notice
  /       %p.alert.alert-success= notice
  /     - if alert
  /       %p.alert.alert-danger= alert
  /     = yield
  %body
    = render "layouts/header"
    .container#notifications
      - if notice || alert
        .notifications
          - if notice
            .notice
              %p= notice
          - if alert
            .alert
              %p= alert
    %section#content
    .container
      = yield
    %footer#footer
      .container
        %p &copy; Lp Coop

    = javascript_include_tag "application"
    :javascript
      setTimeout(function() {
        $(".notifications").fadeOut();
      }, 2000);
