!!!
%html
  %head
    %meta{ content: "width=device-width, initial-scale=1", name: "viewport" }
    / %link{:href => "http://fonts.googleapis.com/css?family=Niconne", :rel => "stylesheet", :type => "text/css"}
    / %link{:href =>'http://fonts.googleapis.com/css?family=Hind|Josefin+Slab', :rel => 'stylesheet', :type => 'text/css'}
    %link{:href =>'http://fonts.googleapis.com/css?family=Hind|PT+Mono|Old+Standard+TT', :rel => 'stylesheet', :type => 'text/css'}
    = stylesheet_link_tag    'application', media: 'all'
    = csrf_meta_tags
    %title Coop
  / %header

  %body
    = render "layouts/header"
    .container#notifications
      - if notice || alert
        .notifications
          - if notice
            .notice
              %p= notice
          - if alert
            .alert
              %p= alert

    %section#content
    .container
      = yield

    %footer#footer
      .container

    = javascript_include_tag "application"
    :javascript
      setTimeout(function() {
        $(".notifications").fadeOut();
      }, 2000);
