%h2 Add new product:
/ = render :partial => "form"
= form_for(@product, url: {action: "create"}) do |f|
  %p
    = f.label "Name"
    = f.text_field :name
  %p
    = f.label "Description"
    = f.text_field :description
  %p
    = f.label "Price"
    = f.text_field :price
  %p
    = f.label "Vendor"
    = f.collection_select(:vendor_id, Vendor.all, :id, :name)
  .form-action= f.submit "Update"
= link_to "Back", :back
