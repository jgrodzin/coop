= form_for(Product, as: @product, url: event_event_product_path, html: { method: :put }) do |f|
  %p
    = f.label "Name"
    = f.text_field :name
  %p
    = f.label "Description"
    = f.text_field :description
  %p
    = f.label "Price"
    = f.text_field :price
  %p
    = f.label "Vendor"
    = f.collection_select(:vendor_id, Vendor.all, :id, :name)
  .form-action= f.submit "Update"
= link_to "Back", :back
