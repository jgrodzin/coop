- if @errors
  .errors
    %p #{pluralize((@errors.count), "error")} prohibited this product from being saved
    %ul
    - @errors.each do |message|
      %li.error= message

%h2 Add new product for this event:
/ = render :partial => "form"
= form_for([@inventory, @product], url: {action: "create"}) do |f|
  %p
    = f.label "Name"
    = f.text_field :name
  %p
    = f.label "Unit"
    = f.text_field :unit_type
  %p
    = f.label "Price"
    = f.text_field :price
  %p
    = f.label "Vendor"
    = f.collection_select(:vendor_id, Vendor.all, :id, :name)
  .form-action= f.submit "Save"
= link_to "Back", :back
