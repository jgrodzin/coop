- if @errors
  .errors
    %p #{pluralize((@errors.count), "error")} prohibited this product from being saved
    %ul
    - @errors.each do |message|
      %li.error= message

= form_for(Product, as: @product, url: event_inventory_path, html: { method: :put }) do |f|
  %p
    = f.label "Name"
    = f.text_field :name
  %p
    = f.label "Price"
    = f.text_field :price
  %select
    = f.label "Unit tpye"
    / %option= @product.unit_type
    -Product.all.map do |product|
      %option{value: product.unit_type}= product.unit_type
  %p
    = f.label "Vendor"
    = f.collection_select(:vendor_id, Vendor.all, :id, :name)
  .form-action= f.submit "Update"
= link_to "Back", :back
