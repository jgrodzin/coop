- if @errors
  .errors
    %p #{pluralize((@errors.count), "error")} prohibited this product from being saved
    %ul
    - @errors.each do |message|
      %li.error= message

= form_for(Product, as: @product, url: event_inventory_path, html: { method: :put }) do |f|
  %p
    = f.label "Name"
    = f.text_field :name
  %p
    = f.label "Price"
    = f.text_field :price
  %p
    = f.label "Unit tpye"
    = f.select(:unit_type, Product.uniq.pluck(:unit_type))

  %p
    = f.label "Vendor"
    = f.collection_select(:vendor_id, Vendor.all, :id, :name)
  .form-action= f.submit "Update"
  / only deletes product from inventory-- does not destroy the product
  %button.form-action-delete= link_to "DELETE product", event_inventory_path, method: :delete, data: { confirm: "Are you sure??" }
= link_to "Back", :back
