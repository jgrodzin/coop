-if current_member.admin?
  .edit-vendor-link
    %button
      =link_to "Edit", edit_event_path(@event)

.breadcrumbs
  %h5= link_to "Go back", :back


.section-title
  %h3= "Event on #{@event.date_in_words}"

%p= link_to "Price sheet history and statistics"

%h3 Team
%p= @event.team.team_member_names


%h3 Location
%p= @event.location


-if @event.products.present?
  %h3 Product list
  .shopping-cart-table
    %table{:cellpadding => "0", :cellspacing => "0"}
      %thead.hover-table
        %tr
          %th Vendor
          %th Product Name
          %th Price / Unit
          %th Amount
          %th Product total price
      %tbody
        - @event.products.each do |product|
          %tr
            %td= product.vendor.name
            %td= product.name
            %td= "#{humanized_money_with_symbol(product.price)} / #{product.unit_type}"
            %td= product.total_amount_purchased
            %td= "#{humanized_money_with_symbol(product.total_inventory_price)}"
-else
  %h4 This event has no products
.delete
  %button= link_to "Delete event", event_path(@event), method: :delete, data: { confirm: "Are you sure you want to delete this event?" }
  %h5 Deleting an event will delete all products. Please be careful when choosing to delete an event.
