.centered-container
  .section-title
    %h3= "Event on #{@event.date_in_words}"

  -if current_member.admin?
    .add-vendor-link
      %h5
        =link_to "Edit", edit_event_path(@event)


  %p= link_to "Price sheet history and statistics"

  %h3 Team
  %p= @event.team.team_member_names


  %h3 Location
  %p= @event.location


-if @event.products.present?
  .product-table
    %table{:cellpadding => "0", :cellspacing => "0"}
      %thead.hover-table
        %tr
          %th Vendor
          %th Product Name
          %th Price / Unit
          %th Amount
          %th Product total price
      %tbody
        - @event.products.each do |product|
          %tr
            %td= product.vendor.name
            %td= product.name
            %td= "#{humanized_money_with_symbol(product.price)} / #{product.unit_type}"
            %td= product.total_amount_purchased
            %td= "#{humanized_money_with_symbol(product.total_inventory_price)}"
-else
  .centered-container
    %h4 This event had no products
