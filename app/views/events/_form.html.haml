.new-event-form
  - if @errors
    .errors
      %p #{pluralize((@errors.count), "error")} prohibited this event from being saved
      %ul
      - @errors.each do |message|
        %li.error= message

  = form_for(@event) do |f|
    %p
      = f.label "Date"
      = f.date_field :date

    %p
      = f.label "Team (choose by leader)"
      = f.collection_select(:team_id, Team.all, :id, :leader_names, { include_blank: true } )

    %p
      = f.label "Location"
      = f.select(:location, Member.all.map(&:address), { include_blank: true } )

    .form-action
      = f.submit "Save"
      %button.cancel
        = link_to "Cancel", :back
