.new-event-form
  - if @errors
    .errors
      %p #{pluralize((@errors.count), "error")} prohibited this event from being saved
      %ul
      - @errors.each do |message|
        %li.error= message

  = form_for(@event) do |f|
    %p.date-input
      = f.label "Date"
      = f.date_field :date

    %p.team-leader-input
      = f.label "Team"
      .team-leader-names
        = f.collection_radio_buttons(:team_id, Team.all, :id, :team_member_names, { include_blank: true } )
    %p
      = f.label "Location"
      = f.select(:location, Member.all.map(&:address), { include_blank: true } )

    .form-action
      = f.submit "Save"
      %button.cancel
        = link_to "Cancel", :back
