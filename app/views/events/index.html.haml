%h2 Shopping Events this Season
.cards
  -@events.each do |event|
    .card
      / .card-image
      /   %img{:alt => "", :src => "https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/mountains-4.png"}/
      .card-header
        %p=event.date_in_words
      .card-copy
        %p="Team #{event.team.number}"
        %p="#{event.location}"
        %p="event id is #{event.id}"
      .card-stats
        %ul
          %li
            =link_to "Available products", event_event_products_path(event)
          %li
            =link_to "My order"
          %li
            =event.involved_vendors.pluck(:vendor_id).uniq.count
            %span Vendors
          %li
            =event.event_products.count
            %span Products
