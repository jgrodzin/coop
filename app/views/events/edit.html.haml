= render "form"


-if @event.products.present?
  .shopping-cart-table
    %table{:cellpadding => "0", :cellspacing => "0"}
      %thead.hover-table
        %tr
          %th Vendor
          %th Product Name
          %th Price / Unit
          %th Amount
          %th Product total price
      %tbody
        - @event.products.each do |product|
          %tr
            %td= product.vendor.name
            %td= product.name
            %td= "#{humanized_money_with_symbol(product.price)} / #{product.unit_type}"
            %td= product.total_amount_purchased
            %td= "#{humanized_money_with_symbol(product.total_inventory_price)}"

%button.cancel= link_to "Delete event", event_path(@event), method: :delete, data: { confirm: "Are you sure you want to delete this event?" }
%h5 Deleting an event will delete all products.
