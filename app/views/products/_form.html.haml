- if @errors
  .errors
    %p #{pluralize((@errors.count), "error")} prohibited this product from being saved
    %ul
    - @errors.each do |message|
      %li.error= message
%br
%h3 Add products
%br
.vertical-product-form
  = form_for([@event, @product]) do |f|
    %p
      = f.label "Vendor"
      = f.collection_select(:vendor_id, Vendor.all.order(:name), :id, :name)
    %p.product-name
      = f.label "Name"
      = f.text_field :name
    %p.product-price
      = f.label "Price"
      = f.text_field :price
    %p.product-unit
      = f.label "Unit"
      = f.select(:unit_type, Product.uniq.pluck(:unit_type))
    %p.product-amount
      = f.label "Amount"
      = f.text_field :total_amount_purchased

      .form-action
        = f.submit "Save"
        %button.cancel
          = link_to "Cancel", :back
