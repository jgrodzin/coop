.category-menu
  %ul
    - @vendor_categories.each do |category|
      %li= category

- @products.each_pair do |vendor, products|
  %table{:cellpadding => "0", :cellspacing => "0"}
    %tbody
      %h5= link_to "#{vendor.name}", vendor_path(vendor)
      %p= vendor.category
      %tr
        %th Product Name
        %th Price / unit
        - products.each do |product|
          %tr
          %td= product.name
          %td= "#{number_to_currency(product.price)} / #{product.unit_type}"
  %br
